@{
    ViewData["Title"] = "Home Page";
}


<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <h1 class="display-4 mb-3">Welcome</h1>
                    <p class="lead">Learn about <a href="https://learn.microsoft.com/aspnet/core" target="_blank">building Web apps with ASP.NET Core</a>.</p>
                </div>
            </div>
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="h4 mb-4 text-center">Test your Azure App</h2>
                    <form method="post" action="/Home/Submit">
                        <div class="mb-3">
                            <label for="inputField" class="form-label">Your Name</label>
                            <input type="text" class="form-control" id="inputField" name="inputField" placeholder="Enter your name...">
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-sm">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
        .display-4 {
            font-size: 2rem;
        }
        .card-body {
            padding: 1rem;
        }
</style>
